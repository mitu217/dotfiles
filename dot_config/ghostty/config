# Ghostty Configuration
# https://ghostty.org/docs/config

# Font
font-family = "JetBrains Mono"
font-size = 14
font-thicken = true

# Enable ligatures
font-feature = +liga
font-feature = +calt

# Theme (auto switch light/dark)
theme = "light:Catppuccin Latte,dark:Catppuccin Mocha"

# Window
window-padding-x = 8
window-padding-y = 8
window-decoration = true

# Shell
command = /opt/homebrew/bin/fish

# Cursor
cursor-style = block
cursor-style-blink = false

# Mouse
mouse-hide-while-typing = true

# Clipboard
copy-on-select = true

# macOS specific
macos-option-as-alt = true
macos-titlebar-style = tabs

# Keybindings (similar to tmux C-a prefix)
keybind = ctrl+a>c = new_tab
keybind = ctrl+a>x = close_surface
keybind = ctrl+a>backslash = new_split:right
keybind = ctrl+a>minus = new_split:down
keybind = ctrl+a>h = goto_split:left
keybind = ctrl+a>j = goto_split:bottom
keybind = ctrl+a>k = goto_split:top
keybind = ctrl+a>l = goto_split:right
keybind = ctrl+a>1 = goto_tab:1
keybind = ctrl+a>2 = goto_tab:2
keybind = ctrl+a>3 = goto_tab:3
keybind = ctrl+a>4 = goto_tab:4
keybind = ctrl+a>5 = goto_tab:5
