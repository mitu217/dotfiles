[user]
    name = {{ .name }}
    email = {{ .email }}
{{- if .signingkey }}
    signingkey = {{ .signingkey }}

[gpg]
    format = ssh

[gpg "ssh"]
    program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[commit]
    gpgsign = true

[tag]
    gpgsign = true

[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
{{- end }}

[init]
    defaultBranch = main
